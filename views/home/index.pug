doctype html
html(lang="en")
  head
    title= pageTitle
    link(rel='stylesheet', href='/static/bower-plugins/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/static/css/style.css')
    script(src='/static/bower-plugins/jquery/dist/jquery.min.js')
    script(src='/static/bower-plugins/bootstrap/dist/js/bootstrap.min.js')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container.
        SSL - Sâm Sơn Lương
    .body-container
      .row
        .col-md-3.product-list
        .col-md-9
          .product-detail
            .row.button-container.
              <button type="button" class="btn" data-toggle="modal" data-target="#addProduct">
                Add product
              </button>
            .row.button-container.
              <button type="button" class="btn" id="delete-button">
                Delete this product
              </button>
            .detail-info
              .row
                <img class="product-image" src="">
              .row
                .col-md-2.detail-key.
                  Name:
                .col-md-10#name-field.

              .row
                .col-md-2.detail-key.
                  Type:
                .col-md-10#type-field.

              .row
                .col-md-2.detail-key.
                  Price:
                .col-md-10#price-field.

              .row
                .col-md-2.detail-key.
                  Description
                .col-md-10
              .row
                .col-md-2.detail-key.
                .col-md-10.detail-value
    include addModal.pug
    include deleteModal.pug

    script(src='static/js/home.js')
